# MediSyn Labs Healthcare Research Assistant Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///healthcare_memory.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# Application Configuration
APP_NAME=MediSyn Labs Healthcare Research Assistant
APP_VERSION=1.0.0
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# Session Configuration
DEFAULT_SESSION_TIMEOUT_MINUTES=60
MAX_QUERIES_PER_SESSION=50
AUTO_SAVE_INTERVAL_MINUTES=5

# Memory Management
MAX_SHORT_TERM_QUERIES=7
MEMORY_CLEANUP_DAYS=30
AUTO_TRIM_MEMORY=true

# Human-in-the-Loop Configuration
AUTO_APPROVAL_ENABLED=false
CONFIDENCE_THRESHOLD=0.7
MEDICAL_RELEVANCE_THRESHOLD=0.8
CRITICAL_PRIORITY_AUTO_APPROVE=false

# Report Generation
DEFAULT_REPORT_FORMAT=markdown
ENABLE_CSV_EXPORT=true
ENABLE_JSON_EXPORT=true
MAX_REPORT_SIZE_MB=10

# Security Configuration
ENABLE_ENCRYPTION=true
SESSION_SECRET_KEY=your_secret_key_here
API_RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_FILE_PATH=logs/healthcare_assistant.log
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# External Services (Optional)
PUBMED_API_KEY=your_pubmed_api_key_here
CLINICAL_TRIALS_API_KEY=your_clinical_trials_api_key_here

# Development Settings
MOCK_EXTERNAL_APIS=true
ENABLE_DEBUG_LOGGING=false
STREAMLIT_SERVER_PORT=8501